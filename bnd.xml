<?xml version="1.0"?>
<project name="bnd">

  <taskdef resource="aQute/bnd/ant/taskdef.properties">
    <classpath>
      <pathelement location="${antlib}/bnd.jar"/>
    </classpath>
  </taskdef>

  <target name="peaberry" depends="compile">
    <mkdir dir="${build}/dist"/>
    <bnd files="peaberry.bnd" classpath="${util.jar},${build}/classes" output="${peaberry.jar}"/>
  </target>

  <target name="director" depends="test.compile">
    <mkdir dir="${build}/test"/>
    <bnd files="director.bnd" classpath="${build}/test,${guice}/build/test" output="${director.jar}"/>
  </target>

</project>
