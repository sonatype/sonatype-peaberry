<?xml version="1.0"?>
<project name="peaberry" default="dist">

  <property file="build.properties"/>

  <import file="scm.xml"/>
  <import file="patch.xml"/>
  <import file="bnd.xml"/>

  <target name="guice">
    <ant dir="${guice}" target="test.dist"/>
  </target>

  <target name="compile">
    <mkdir dir="${build}/classes"/>
    <javac srcdir="${src}" destdir="${build}/classes" classpath="${build.classpath}"/>
  </target>

  <target name="clean">
    <ant dir="${guice}" target="clean"/>
    <delete dir="${build}"/>
  </target>

  <target name="wipe">
    <delete dir="${guice}"/>
    <delete dir="${build}"/>
  </target>

  <target name="dist" depends="scm,patch,guice,compile,bnd"/>

</project>
