
-include: ${common.dir}/common.bnd
-classpath: ${build.dir}/classes

Include-Resource:\
 META-INF/NOTICE=../NOTICE,\
 META-INF/LICENSE=../LICENSE,\
 META-INF/LICENSE.riena=../LICENSE.riena,\
 @${riena.jar}!/org/eclipse/riena/core/extension/[^E]*,\
 org/eclipse=${build.dir}/classes/org/eclipse

Import-Package:\
 ${module}.*;version=${api.range},\
 org.ops4j.peaberry;version="[1,2)",\
 org.eclipse.core.runtime;registry=split,\
 org.osgi.framework;version="[1.3,2)",\
 *;resolution:=optional

-exportcontents:\
 ${module};version=${api.version}

-output:\
 ${peaberry-eclipse.jar}

